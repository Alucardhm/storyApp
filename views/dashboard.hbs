
<h3>Welcome {{name}}</h3>
<h2>Here are your stories</h2>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td> <!-- como ta dentro do loop o _id ele ja entende que Ã© o id da story -->
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/stories/edit/{{_id}}" class="btn btn-float">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form action="/stories/{{_id}}?_method=DELETE" method="POST" id="delete-form">
                            <button class="btn red" type="submit">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
{{#if displayError}}
    <h4 style="color: red;">Error getting your stories. Please try again later</h4>
{{else}}
    <h4 style="color: red;">You have not created any stories</h4>
{{/if}}

{{/if}}